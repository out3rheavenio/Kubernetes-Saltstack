{%- set clusterIpRange =  pillar['kubernetes']['global']['clusterIP-range'] -%} 
{%- set ca_root_dir =  pillar['kubernetes']['ca_root_dir'] -%} 
[Unit]
Description=Kubernetes Controller Manager
Documentation=https://github.com/GoogleCloudPlatform/kubernetes

[Service]
ExecStart=/usr/bin/kube-controller-manager \
  --cluster-name=kubernetes \
  --leader-elect=true \
  --master=http://127.0.0.1:8080 \
  --root-ca-file={{ ca_root_dir}}/ca.pem \
  --pod-eviction-timeout 30s \
  --service-account-private-key-file={{ ca_root_dir}}/ca-key.pem \
  --cluster-name=kubernetes \
  --cluster-signing-cert-file={{ ca_root_dir}}/ca.pem \
  --cluster-signing-key-file={{ ca_root_dir}}/ca-key.pem \
  --service-cluster-ip-range={{ clusterIpRange }} \
  --node-startup-grace-period 30s \
  --v=2

Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target
